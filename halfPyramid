import java.util.Scanner;
public class pattern {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        System.out.println(" Enter the value:  ");
        int n =sc.nextInt();
        //outer loop
        for(int i =1; i<=n;i++){
            //inner loop
            for(int j=1; j<=i; j++){

                System.out.print(j);
            }
            System.out.println();
        }
        System.out.println("Half Pyramid printed");
    }
}
